  <%= render "form.html", Map.put(assigns, :action, Routes.comment_path(@conn, :update, @comment)) %>

  <span>
    <%= link "back", to: Routes.comment_path(@conn, :index), class: "font-mono inline-block mt-6 text-gray-500 border-double border-4 border-gray-500 dark:border-gray-400 hover:border-white hover:text-white rounded-lg p-4 hover:bg-gray-500" %>
  </span>
</div>
